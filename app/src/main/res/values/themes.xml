<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.GameOfThrones" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_primary_dark</item>
    </style>
    
    <style name="Theme.GameOfThrones.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.GameOfThrones.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.SplashScreen" parent="Theme.GameOfThrones">
        <item name="android:statusBarColor">@color/color_primary_dark</item>
        <item name="android:windowBackground">@drawable/spash</item>
    </style>

</resources>